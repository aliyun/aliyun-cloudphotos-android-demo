<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/empty_header" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_faces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <GridLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_face0"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_face1"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_face2"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_face3"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:textStyle="bold"
                    android:text="@string/cat_faces"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <GridLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_tag0"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_tag1"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_tag2"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_tag3"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:textStyle="bold"
                    android:text="@string/cat_tags"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <GridLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_place0"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_place1"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_place2"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_place3"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:textStyle="bold"
                    android:text="@string/cat_places"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <GridLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_thing0"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_thing1"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_thing2"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_thing3"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:textStyle="bold"
                    android:text="@string/cat_things"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_collages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <GridLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_collage0"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_collage1"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_collage2"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                    <ImageView
                        android:id="@+id/iv_collage3"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray"/>

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:textStyle="bold"
                    android:text="@string/cat_collages"/>

            </LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:visibility="gone"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:text="@string/smart_album"/>

</LinearLayout>
